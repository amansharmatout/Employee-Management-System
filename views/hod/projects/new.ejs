<%- include("../../partials/header") %>
<!-- Wrapper -->
<div id="wrapper">

  <!-- Main -->
  <div id="main">
    <div class="inner">

      <!-- Header -->
      <header id="header">
        <a href="#" class="logo"><strong>Login as:</strong> <%=employee.first_name %> <%= employee.last_name %> -
            <%= currentUser.user_role%></a>
      </header>

      <!-- Content -->
      <section>
        <header class="main">
          <h1>Project Creation</h1>
        </header>

        <!-- <p>Donec eget ex magna. Interdum et malesuada fames ac ante ipsum primis in faucibus. Pellentesque venenatis
          dolor imperdiet dolor mattis sagittis. Praesent rutrum sem diam, vitae egestas enim auctor sit amet.
          Pellentesque leo mauris, consectetur id ipsum sit amet, fergiat. Pellentesque in mi eu massa lacinia malesuada
          et a elit. Donec urna ex, lacinia in purus ac, pretium pulvinar mauris. Curabitur sapien risus, commodo eget
          turpis at, elementum convallis elit. Pellentesque enim turpis, hendrerit.</p> -->

        <hr class="major" />

        <!-- Form -->
        <form action="/homehod/projects" method="POST">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="inputName4">Name</label>
              <input type="text" class="form-control" id="inputName4" name="project[name]">
            </div>
            <div class="form-group col-md-4">
              <label for="inputStart">Start Date</label>
              <input type="date" class="form-control" id="inputStart" name="project[start]">
            </div>
            <div class="form-group col-md-4">
              <label for="inputEnd">End Date</label>
              <input type="date" class="form-control" id="inputEnd" name="project[end]">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="inputDept">Department</label>
              <select id="inputDept" class="form-control" name="project[department]">
                <option selected><%= employee.department%></option>
              </select>
            </div>
            <div class="form-group col-md-4">
              <label for="inputCompany">Company</label>
              <input type="text" class="form-control" id="inputCompany" name="project[company]"
                value="<%=currentUser.company_name%>">
            </div>
            <div class="form-group col-md-4">
              <label for="inputState">State</label>
              <select name="project[state]" id="inputState" class="form-control">
                <option selected> - Choose -</option>
                <option>Not started yet</option>
                <option>In progress</option>
                <option>Completed</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="inputDescription">Description</label>
            <textarea id="inputDescription" cols="30" rows="10" name="project[description]"></textarea>
          </div>
          <div class="form-group">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck">
              <label class="form-check-label" for="gridCheck">
                Check me out
              </label>
            </div>
          </div>
          <button type="submit" class="button primary">Create</button>
        </form>

      </section>

    </div>
  </div>

  <!-- Sidebar -->
  <%- include("../../partials/hod_sidebar") %>

</div>

