					<header>
						<h1><%=currentUser.company_name%></h1>
						<p><%=currentUser.company_type%></p>
					</header>
					<p><%=currentUser.company_description%></p>
					<ul class="actions">
						<li><a href="/homeadmin/companies/<%=currentUser.company.id%>" class="button big">Learn More</a></li>
					</ul>
				</div>
				<span class="image object">
					<img src="images/header.jpeg" alt="" />
				</span>
			</section>

			<!-- Section -->
			<section>
				<header class="major">
					<h2>Services</h2>
				</header>
