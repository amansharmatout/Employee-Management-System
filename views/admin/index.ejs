	<div id="main">
		<div class="inner">

			<!-- Header -->
			<header id="header">
				<a href="#" class="logo"><strong>Login as:</strong> <%= currentUser.username%> -
					<%= currentUser.user_role%></a>
			</header>

			<!-- Banner -->
			<section id="banner">
