<%- include("../../partials/header") %>
<!-- Wrapper -->
<div id="wrapper">

	<!-- Main -->
	<div id="main">
		<div class="inner">

			<!-- Header -->
			<header id="header">
				<% if(currentUser.user_role === 'Admin') { %>
					<a href="#" class="logo"><strong>Login as:</strong> <%= currentUser.username%></a>
				<% }else { %>
					<a href="#" class="logo"><strong>Login as:</strong> <%=employee.first_name %> <%= employee.last_name %> -
						<%= currentUser.user_role%></a>
				<% } %>
				
			</header>

			<!-- Content -->
			<section>
				<header class="main">
					<h1>News</h1>
				</header>

				<div>
					<a href="/blogs/new" class="button primary">Post Article</a>
				</div>

				<div class="row text-center" style="display: flex; flex-wrap: wrap;">
					<% blogs.forEach(function(blog){ %>
					<div class="col-lg-4 col-md-4 col-sm-6 mt-3">
						<div class="card-deck">
							<div class="card">
								<img src="<%=blog.image%>" class="card-img-top">
								<div class="card-body">
									<h5 class="card-title"><%=blog.title%></h5>
									<p class="card-text"><%=blog.content.substring(0,100)%>...</p>
									<a href="/blogs/<%=blog._id%>" class="button">Read More</a>
								</div>
								<div class="card-footer">
									<small class="text-muted">Posted on <%=blog.createdAt.toDateString()%></small>
								</div>
							</div>
						</div>

					</div>
					<% }) %>
				</div>


			</section>

		</div>
	</div>

	<!-- Sidebar -->
	<% if(currentUser.user_role === 'Admin'){ %>
		<%- include("../../partials/sidebar") %>
	<% }else if(currentUser.user_role === 'HR'){ %>
		<%- include("../../partials/hr_sidebar") %>
	<% }else if(currentUser.user_role === 'HOD'){ %>
        <%- include("../../partials/hod_sidebar") %>
    <% }else { %>
        <%- include("../../partials/emp_sidebar") %>
    <% } %> %>
	

</div>

<!-- Scripts -->
<script src="/js/jquery.min.js"></script>
<script src="/js/browser.min.js"></script>
<script src="/js/breakpoints.min.js"></script>
<script src="/js/util.js"></script>
<script src="/js/main.js"></script>
<!-- Bootstrap -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
