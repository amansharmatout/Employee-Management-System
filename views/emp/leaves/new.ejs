                <!-- Form -->
                <form action="/homeemployee/leaves/employees/<%=employee._id%>" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                          <label for="inputCat">Category</label>
                          <input type="text" class="form-control" id="inputCat" name="category">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputDate">Start Date</label>
                            <input type="date" class="form-control" id="inputDate" name="start_date">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputEdate">Return to work Date</label>
                            <input type="date" class="form-control" id="inputEdate" name="end_date">
                        </div>
                      </div>
                      <div class="form-row">
                          <div class="form-group col-md-12">
                              <label for="inputReason">Reason</label>
                              <textarea name="reason" id="" cols="30" rows="10"></textarea>
                          </div>
                      </div>

                      <button class="button primary">Apply</button>
                </form>
			</section>

		</div>
	</div>

	<!-- Sidebar -->
	<%- include("../../partials/emp_sidebar") %>

</div>

