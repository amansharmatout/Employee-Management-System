<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>E.M.S</title>
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/df19b88d34.js" crossorigin="anonymous"></script>
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <!-- custom css file -->
    <link rel="stylesheet" href="stylesheets/main.css">
</head>

<body>

    <!-- ====================Start Header Area  ====================-->
    <header class="header_area">
        <div class="main-menu">
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #f67878;">
                <a class="navbar-brand" href="/">E.M.S by Aman Sharma</a>
            </nav>
        </div>
    </header>

    <!-- END HEADER -->

    <!-- FLASH MESSAGE -->
    <div class="container">
        <% if(error && error.length > 0) {%>
        <div class="alert alert-danger alert-dismissible" role="alert">
            <%= error %>
        </div>
        <% } %>
        <% if(success && success.length > 0) {%>
        <div class="alert alert-success alert-dismissible" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>

    <!-- START REGISTER FORM -->

    <div class="container">
        <!-- <div class="row"> -->
        <h1 style="text-align: center">Registration</h1>
        <div style="width: 60%; margin: 25px auto;">
            <form action="/register" method="post">
                <h4>Personal Infomation:</h4>
                <!-- Personal Stuffs -->
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Full Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="user_email" placeholder="Email Address" required>
                </div>
                <div class="form-group">
                    <label for="role">Role:</label>
                    <select class="form-control" name="user_role" id="role" required>
                        <option>Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password2" placeholder="Confirm Password"
                        required>
                </div>
                <h4>Company Infomations:</h4>
                <p>Please fill in all required informations about the company you would like to register</p>
                <!-- Company Stuffs -->
                <div class="form-group">
                    <input class="form-control" type="text" name="company_name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ein" placeholder="EIN" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company_email" placeholder="Email Address" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company_phone" placeholder="Phone" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company_address" placeholder="Address" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company_type" placeholder="Type" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company_city" placeholder="City" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company_size" placeholder="Size" required>
                </div>
                <div class="form-group">
                    <textarea name="company_description" id="" cols="30" rows="10"
                        placeholder="Company Description"></textarea>
                </div>

                <div class="form-group">
                    <button class="button primary fit">Sign Up!</button>
                </div>

            </form>
        </div>
        <!-- </div> -->
    </div>

    <!-- END REGISTER FORM -->



    <%- include("partials/footer") %>