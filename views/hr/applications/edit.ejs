<%- include("../../partials/header") %>
<!-- Wrapper -->
<div id="wrapper">

	<!-- Main -->
	<div id="main">
		<div class="inner">

			<!-- Header -->
			<header id="header">
				<a href="#" class="logo"><strong>Login as:</strong> <%=employee.first_name %> <%= employee.last_name %> -
					<%= currentUser.user_role%></a>
			</header>

			<!-- Content -->
			<section>
				<header class="main">
					<h1>Employee Creation</h1>
				</header>

				<p>Please fill out all the remaining employee informations</p>

				<hr class="major" />

				<!-- Form -->
				<form action="/homehr/applications/<%=application._id%>/approve" method="POST">
					<!-- Personal Details Card -->
					<div class="card">
						<h5 class="card-header">Personal Details</h5>
						<div class="card-body">
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputFname">First Name</label>
									<input type="text" class="form-control" id="inputFname" name="employee[first_name]"
										required value="<%=application.applicant.first_name%>">
								</div>
								<div class="form-group col-md-6">
									<label for="inputLname">Last Name</label>
									<input type="text" class="form-control" id="inputLname" name="employee[last_name]"
										required value="<%=application.applicant.last_name%>">
								</div>
							</div>

							<div class="form-row">
								<div class="form-group col-md-4">
									<label for="inputDob">Date Of Birth</label>
									<input type="date" class="form-control" id="inputDob" name="employee[date_of_birth]"
										required value="<%=application.applicant.date_of_birth%>">
								</div>
								<div class="form-group col-md-4">
									<label for="inputGender">Gender</label>
									<select id="inputGender" class="form-control" name="employee[gender]" required>
										<option selected><%= application.applicant.gender%></option>
                                        <% if(application.applicant.gender === 'Male'){ %>
                                            <option>Female</option>
                                        <% }else { %>
                                            <option>Male</option>
                                        <% } %>
									</select>
								</div>
								<div class="form-group col-md-4">
									<label for="inputMarital">Marital Status</label>
									<select id="inputMarital" class="form-control" name="employee[marital_status]"
										required>
										<option selected>- Choose -</option>
										<option>Married</option>
										<option>Single</option>
									</select>
								</div>
							</div>

							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputNationality">Nationality</label>
									<input type="text" class="form-control" id="inputNationality"
										name="employee[nationality]" required value="<%=application.applicant.nationality%>">
								</div>
								<div class="form-group col-md-3">
									<label for="inputPassportNo">Passport NO</label>
									<input type="text" class="form-control" id="inputPassportNo"
										name="employee[passport_no]" required>
								</div>
								<div class="form-group col-md-3">
									<label for="inputPhoto">Photo(URL)</label>
									<input type="text" class="form-control" id="inputPhoto" name="employee[photo]"
										required value="<%= application.applicant.photo%>">
								</div>
							</div>
						</div>
					</div>

					<!-- Contact Details Card -->
					<div class="card" style="margin-top: 20px;">
						<h5 class="card-header">Contact Details</h5>
						<div class="card-body">
							<div class="form-row">
								<div class="form-group col-md-4">
									<label for="inputAddr">Address</label>
									<input type="text" class="form-control" id="inputAddr" name="employee[address]"
										required value="<%= application.applicant.address%>">
								</div>
								<div class="form-group col-md-4">
									<label for="inputCity">City</label>
									<input type="text" class="form-control" id="inputCity" name="employee[city]"
										required value="<%= application.applicant.city%>">
								</div>
								<div class="form-group col-md-4">
									<label for="inputEmail">Email</label>
									<input type="email" class="form-control" id="inputEmail" name="employee[email]"
										required value="<%= application.applicant.email%>">
								</div>
							</div>

							<div class="form-row">
								<div class="form-group col-md-4">
									<label for="inputCountry">Country</label>
									<input type="text" class="form-control" id="inputCountry" name="employee[country]"
										required value="<%= application.applicant.country%>">
								</div>
								<div class="form-group col-md-4">
									<label for="inputMobile">Mobile</label>
									<input type="text" class="form-control" id="inputMobile" name="employee[mobile]"
										required value="<%= application.applicant.mobile%>">
								</div>
								<div class="form-group col-md-4">
									<label for="inputPhone">Phone</label>
									<input type="text" class="form-control" id="inputPhone" name="employee[phone]" required value="<%= application.applicant.phone%>">
								</div>
                            </div>
						</div>
					</div>

					<!-- Bank Information Card -->
					<div class="card" style="margin-top: 20px;">
						<h5 class="card-header">Bank Information</h5>
						<div class="card-body">
							<div class="form-row">
								<div class="form-group col-md-4">
									<label for="inputBankN">Bank Name</label>
									<input type="text" class="form-control" id="inputBankN" name="employee[bank_name]"
										required>
								</div>
								<div class="form-group col-md-4">
									<label for="inputAccountName">Account Name</label>
									<input type="text" class="form-control" id="inputAccountName"
										name="employee[account_name]" required>
								</div>
								<div class="form-group col-md-4">
									<label for="inputAccountNumber">Account NO</label>
									<input type="text" class="form-control" id="inputAccountNumber"
										name="employee[account_no]" required>
								</div>
							</div>
						</div>
					</div>

					<!-- Official Status Card -->
					<div class="card" style="margin-top: 20px;">
						<h5 class="card-header">Official Status</h5>
						<div class="card-body">
							<div class="form-row">
								<div class="form-group col-md-4">
									<label for="inputEmployeeID">Employee ID</label>
									<input type="text" class="form-control" id="inputEmployeeID"
										name="employee[employee_id]" required>
								</div>
								<div class="form-group col-md-4">
									<label for="inputDesignation">Designation</label>
									<input type="text" class="form-control" id="inputDesignation"
										name="employee[designation]" required value="<%= application.applicant.desired_designation%>">
								</div>
								<div class="form-group col-md-4">
									<label for="inputJoining">Joining Date</label>
									<input type="date" class="form-control" id="inputJoining"
										name="employee[joining_date]" required>
								</div>
							</div>

							<div class="form-row">
								<div class="form-group col-md-4">
									<label for="inputDept">Department</label>
									<select id="inputDept" class="form-control" name="employee[department]">
										<option selected><%=application.applicant.department%></option>
										<% departments.forEach(function(dept){ %>
										<% if(dept.company === currentUser.company_name){ %>
										<option><%= dept.department_name%></option>
										<% } %>

										<% }) %>
									</select>
								</div>
								<div class="form-group col-md-4">
									<label for="inputSalary">Salary</label>
									<input type="text" class="form-control" id="inputSalary" name="employee[salary]">
								</div>
								<div class="form-group col-md-4">
									<label for="inputCompany">Company</label>
									<input type="text" class="form-control" id="inputCompany" name="employee[company]"
										value="<%= currentUser.company_name%>" required>
								</div>
							</div>

							<div class="form-row">
								<div class="form-group col-md-4">
									<label for="inputEmployeeType">Contract Type</label>
									<select id="inputEmployeeType" class="form-control"
										name="employee[type_of_employee]" required>
										<option selected><%=application.applicant.type_of_employee%></option>
										<% if(application.applicant.type_of_employee === 'Full-Time'){ %>
                                            <option>Part-Time</option>
                                        <% }else { %>
                                            <option>Full-Time</option>
                                        <% } %>
									</select>
								</div>
								<div class="form-group col-md-4">
									<label for="inputQualification">Qualification</label>
									<input type="text" class="form-control" id="inputQualification"
										name="employee[qualification]" required value="<%=application.applicant.qualification%>">

                                </div>
                                <div class="form-group col-md-4">
									<label for="inputResume">Resume</label>
									<input type="text" class="form-control" id="inputResume" name="employee[curriculum_vitae]" required value="<%=application.curriculum_vitae%>">
								</div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
									<label for="inputStarthour">Start Hour</label>
									<input type="time" name="employee[hour_start]" id="inputStarthour" style="width: 100%;">
								</div>
								<div class="form-group col-md-2">
									<label for="inputEndhour">End Hour</label>
									<input type="time" name="employee[hour_end]" id="inputEndhour" style="width: 100%;">
								</div>
                            </div>
						</div>
					</div>

					<button type="submit" class="button primary mt-3">Create</button>
				</form>

			</section>

		</div>
	</div>

	<!-- Sidebar -->
	<%- include("../../partials/hr_sidebar") %>

</div>

<!-- Scripts -->
<script src="/js/jquery.min.js"></script>
<script src="/js/browser.min.js"></script>
<script src="/js/breakpoints.min.js"></script>
<script src="/js/util.js"></script>
<script src="/js/main.js"></script>
<!-- Bootstrap -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
